<p><a href=<%= new_admin_time_cv_path %> class='btn btn-primary mb-4' data-remote='true'>ajouter une date</a></p> <!-- modal -->
<div id='cv_entries'>
  
  <% @times.each do |time| %>
  
  <div class='date date-<%= time.id %> mb-3'>
    <div class='row'>
        <div class='col-lg-6'>
          <h2 class='m-0 mt-1 mb-lg-0 mb-3'><%= time.date %></h2>
        </div>
        <div class='col-lg-6 text-lg-right'>
          <p class='m-0'>
            <a href=<%= edit_admin_time_cv_path(id: time.id) %> class='btn btn-danger mb-4 d-lg-none d-inline mr-3 sup' data-remote='true'>modifier</a><!-- modal -->
            <a href=<%= new_admin_cv_entry_path(date: time.id) %> data-remote='true' class='btn btn-primary mb-4 d-lg-none d-inline'>ajouter une entr√©e</a><!-- modal -->
          </p> 
        </div>
    </div>
    <hr class=''>
    <div class='row mb-3'>
      <div class='col-11 mb-3' id='entries-<%= time.id %>'>

      <% time.entries.each do |entry| %>
    
          <div class='entry mb-3 entry-<%= entry.id %>'>
            <div class='d-flex'>
              <h3 class='m-0'><%= entry.title %></h3>
              <p class='m-0'><a href=<%= edit_admin_cv_entry_path(id: entry.id) %> data-remote='true' class='btn btn-danger btn-sm ml-3 mb-0 d-lg-none d-inline'>Modifier</a></p> <!-- modal -->
            </div>
            <% if !entry.sub.nil? %>
              <p class='m-0'><small><%= entry.sub %></small></p>
            <% end %>
          </div>

         <% end %>

      </div>
      <div class='col-lg-1'>
        <p><a href=<%= admin_time_cv_order_up_path(id: time.id) %> data-method='put' data-remote='true' class='btn btn-secondary d-lg-none d-inline'>&#9650;</a></p>
        <p><a href=<%= admin_time_cv_order_down_path(id: time.id) %> data-method='put' data-remote='true' class='btn btn-secondary d-lg-none d-inline'>&#9660;</a></p>
      </div>
    </div>
  </div>
  
  <% end %>
</div>