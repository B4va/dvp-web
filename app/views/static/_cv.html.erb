<div class="container-fluid" id='cv'>
  <div class="row row-fluid row-pad bg-light py-5 flex-nowrap">
    <div class='vertical_line bg-white d-sm-block d-none ml-3'>
    </div>
    <div class='d-flex flex-column ml-sm-5'>

    <% @times.each do |time| %>

      <div class='time'>
        <h3 class='text-secondary mb-md-0 mt-3 mb-2'><%= time.date %></h3>
      </div>

      <% time.entries.each do |entry| %>

        <div class='cv_entry d-flex flex-column'>
          <div class='d-md-flex align-items-baseline'>
            <h2 class='m-0 mr-2 text-dark'><%= entry.title %></h2>
            <% if entry.sub %>
              <p class='mb-md-0 mb-2'><small class='text-secondary'><%= entry.sub %></small></p>
            <% end %>
          </div>
        </div>

      <% end %>

    <% end %>

    </div>
  </div>
</div>