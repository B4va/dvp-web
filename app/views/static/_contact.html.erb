<div class='container py-5' id='contact'>
  <div class="row">
    <div class='col d-lg-flex d-none line'>
    </div>
    <div class='col-lg-auto'>
      <h1 class='mx-lg-4 text-dark mb-0 text-lg-left text-center'>me contacter</h1>
    </div>
  </div>
  <div class='row mt-5'>
    <div class='col-lg-6 col-sm-10 offset-lg-3 offset-sm-1 text-dark'>
      <%= form_tag('/mail', method: 'post') do %>
        <div class='form-group col-8 pl-0'>
          <%= label_tag 'last_name', 'Nom *' %>
          <%= text_field_tag 'last_name', nil, placeholder: 'Prénom', class: 'form-control' %>
        </div>
        <div class='form-group col-8 pl-0'>
          <%= label_tag 'first_name', 'Prénom *' %>
          <%= text_field_tag 'first_name', nil, placeholder: 'Prénom', class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= label_tag 'email', 'Email *' %>
          <%= email_field_tag 'email', nil, placeholder: 'Email', class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= label_tag 'email_validation', 'Confirmation de l\'adresse email *'  %>
          <%= email_field_tag 'email_validation', nil, placeholder: 'Confirmer l\'email', class: 'form-control' %>
        </div>
        <div class='form-group col-6 pl-0'>
          <%= label_tag 'tel', 'Téléphone'  %>
          <%= telephone_field_tag 'tel', nil, placeholder: 'Téléphone', class: 'form-control' %>
        </div>
        <div class='form-group col-6 pl-0'>
          <%= label_tag 'cie', 'Société' %>
          <%= text_field_tag 'cie', nil, placeholder: 'Société', class: 'form-control' %>
        </div>
        <div class='form-group col-6 pl-0'>
          <%= label_tag 'date', 'Date limite du projet ?' %>
          <%= date_field_tag 'date', nil, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= label_tag 'message', 'Message' %>
          <%= text_area_tag 'message', nil, placeholder: 'Votre projet...', class: 'form-control', rows: 10 %>
        </div>
        <div class='mt-5 text-center'>
          <%= submit_tag "Envoyer", class: 'btn btn-lg btn-primary px-5' %>
        </div>
      <% end %>
    </div>
  </div>
</div>