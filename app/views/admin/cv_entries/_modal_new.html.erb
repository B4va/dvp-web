<div class="modal fade bd-example-modal-lg" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">

        <%= form_tag(admin_cv_entries_path, method:'post', remote: true) do %>
            <%= hidden_field_tag 'date', date %>
          <div class='form-group'>
            <%= text_field_tag 'title', nil, placeholder: 'Titre', class: 'form-control', autofocus: true %>
          </div>
          <div class='form-group'>
            <%= text_field_tag 'sub', nil, placeholder: 'Description ?', class: 'form-control', autofocus: true %>
          </div>
          <button id='quit_modal' type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">annuler</button>
          <%= submit_tag 'ajouter', class: 'btn btn-sm btn-success' %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>